page {
  height: 100%;
}
.pyg_index .index_content {
  height: calc( 100vh - 90rpx );
}
.pyg_index .index_content .index_swiper swiper {
  width: 100vw;
  height: 340rpx;
}
.pyg_index .index_content .index_swiper swiper image {
  width: 100%;
}
.pyg_index .index_content .index_cate {
  display: flex;
}
.pyg_index .index_content .index_cate navigator {
  flex: 1;
  padding: 25rpx;
}
.pyg_index .index_content .index_cate navigator image {
  width: 100%;
}
.pyg_index .index_content .index_floor .floor_group .floor_title {
  padding: 10rpx 0;
}
.pyg_index .index_content .index_floor .floor_group .floor_title image {
  width: 100%;
}
.pyg_index .index_content .index_floor .floor_group .floor_list {
  overflow: hidden;
}
.pyg_index .index_content .index_floor .floor_group .floor_list navigator {
  float: left;
  width: 33.33%;
  /* 后四个超链接 */
  /* 2,3两个图片 */
}
.pyg_index .index_content .index_floor .floor_group .floor_list navigator:nth-last-child(-n+4) {
  height: 27.72711207vw;
  border-left: 10rpx solid #FFF;
}
.pyg_index .index_content .index_floor .floor_group .floor_list navigator:nth-child(2),
.pyg_index .index_content .index_floor .floor_group .floor_list navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.pyg_index .index_content .index_floor .floor_group .floor_list navigator image {
  width: 100%;
  height: 100%;
}
